<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">11</defaultcontrol>
    <coordinates>
        <system>1</system>
    </coordinates>
    <controls>
        <!-- Dimmed Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="DD000000">white.png</texture>
        </control>

        <control type="group">
            <posx>560</posx>
            <posy>290</posy>
            <width>800</width>
            <height>500</height>

            <!-- Dialog Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>800</width>
                <height>500</height>
                <texture colordiffuse="FF1a1a1a">white.png</texture>
            </control>

            <!-- Red Border Top -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>800</width>
                <height>4</height>
                <texture colordiffuse="FFE50914">white.png</texture>
            </control>

            <!-- Title -->
            <control type="label">
                <posx>40</posx>
                <posy>25</posy>
                <width>720</width>
                <height>40</height>
                <font>font14_bold</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
                <label>$INFO[Control.GetLabel(1)]</label>
            </control>

            <!-- Display Value -->
            <control type="label" id="4">
                <posx>40</posx>
                <posy>75</posy>
                <width>720</width>
                <height>50</height>
                <font>font20_bold</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
            </control>

            <!-- Number Pad -->
            <control type="grouplist" id="9">
                <posx>100</posx>
                <posy>145</posy>
                <width>600</width>
                <height>340</height>
                <orientation>vertical</orientation>
                <itemgap>10</itemgap>

                <!-- Row 1: 1 2 3 -->
                <control type="grouplist">
                    <width>600</width>
                    <height>70</height>
                    <orientation>horizontal</orientation>
                    <itemgap>20</itemgap>
                    <control type="button" id="11">
                        <include>ButtonNumpad</include>
                        <label>1</label>
                    </control>
                    <control type="button" id="12">
                        <include>ButtonNumpad</include>
                        <label>2</label>
                    </control>
                    <control type="button" id="13">
                        <include>ButtonNumpad</include>
                        <label>3</label>
                    </control>
                </control>

                <!-- Row 2: 4 5 6 -->
                <control type="grouplist">
                    <width>600</width>
                    <height>70</height>
                    <orientation>horizontal</orientation>
                    <itemgap>20</itemgap>
                    <control type="button" id="14">
                        <include>ButtonNumpad</include>
                        <label>4</label>
                    </control>
                    <control type="button" id="15">
                        <include>ButtonNumpad</include>
                        <label>5</label>
                    </control>
                    <control type="button" id="16">
                        <include>ButtonNumpad</include>
                        <label>6</label>
                    </control>
                </control>

                <!-- Row 3: 7 8 9 -->
                <control type="grouplist">
                    <width>600</width>
                    <height>70</height>
                    <orientation>horizontal</orientation>
                    <itemgap>20</itemgap>
                    <control type="button" id="17">
                        <include>ButtonNumpad</include>
                        <label>7</label>
                    </control>
                    <control type="button" id="18">
                        <include>ButtonNumpad</include>
                        <label>8</label>
                    </control>
                    <control type="button" id="19">
                        <include>ButtonNumpad</include>
                        <label>9</label>
                    </control>
                </control>

                <!-- Row 4: Cancel 0 OK -->
                <control type="grouplist">
                    <width>600</width>
                    <height>70</height>
                    <orientation>horizontal</orientation>
                    <itemgap>20</itemgap>
                    <control type="button" id="21">
                        <include>ButtonNumpadCancel</include>
                        <label>$LOCALIZE[222]</label>
                    </control>
                    <control type="button" id="20">
                        <include>ButtonNumpad</include>
                        <label>0</label>
                    </control>
                    <control type="button" id="10">
                        <include>ButtonNumpadOK</include>
                        <label>$LOCALIZE[186]</label>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
