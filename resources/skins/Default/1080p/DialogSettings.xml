<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol>3</defaultcontrol>
    <coordinates>
        <system>1</system>
    </coordinates>
    <controls>
        <!-- Dim Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="DD000000">white.png</texture>
        </control>

        <!-- Dialog Box -->
        <control type="group">
            <posx>310</posx>
            <posy>140</posy>
            <width>1300</width>
            <height>800</height>

            <!-- Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1300</width>
                <height>800</height>
                <texture colordiffuse="FF1a1a1a">white.png</texture>
            </control>

            <!-- Red Border Top -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1300</width>
                <height>4</height>
                <texture colordiffuse="FFE50914">white.png</texture>
            </control>

            <!-- Header -->
            <control type="label" id="1">
                <posx>40</posx>
                <posy>25</posy>
                <width>1220</width>
                <height>45</height>
                <font>font_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[Window.Property(Heading)]</label>
            </control>

            <!-- Categories (Left Side) -->
            <control type="grouplist" id="3">
                <posx>30</posx>
                <posy>90</posy>
                <width>350</width>
                <height>600</height>
                <orientation>vertical</orientation>
                <itemgap>5</itemgap>
                <onright>5</onright>
                <ondown>3</ondown>
                <onup>3</onup>
            </control>

            <!-- Settings List (Right Side) -->
            <control type="grouplist" id="5">
                <posx>400</posx>
                <posy>90</posy>
                <width>870</width>
                <height>600</height>
                <orientation>vertical</orientation>
                <itemgap>5</itemgap>
                <pagecontrol>60</pagecontrol>
                <onleft>3</onleft>
                <ondown>5</ondown>
                <onup>5</onup>
            </control>

            <!-- Scrollbar -->
            <control type="scrollbar" id="60">
                <include>SettingsScrollbarStyle</include>
                <posx>1275</posx>
                <posy>90</posy>
                <width>10</width>
                <height>600</height>
                <onleft>5</onleft>
            </control>

            <!-- OK Button -->
            <control type="button" id="28">
                <include>ButtonPrimary</include>
                <posx>850</posx>
                <posy>720</posy>
                <width>200</width>
                <label>$LOCALIZE[186]</label>
                <onup>5</onup>
                <onright>29</onright>
            </control>

            <!-- Cancel Button -->
            <control type="button" id="29">
                <include>ButtonSecondary</include>
                <posx>1070</posx>
                <posy>720</posy>
                <width>200</width>
                <label>$LOCALIZE[222]</label>
                <onup>5</onup>
                <onleft>28</onleft>
            </control>
        </control>

        <!-- Default Button -->
        <control type="button" id="7">
            <include>SettingsItemStyle</include>
            <width>850</width>
            <height>50</height>
        </control>

        <!-- Default RadioButton -->
        <control type="radiobutton" id="8">
            <include>SettingsItemStyle</include>
            <include>SettingsRadioStyle</include>
            <width>850</width>
            <height>50</height>
            <radiowidth>30</radiowidth>
            <radioheight>30</radioheight>
            <radioposx>800</radioposx>
        </control>

        <!-- Default SpinControlEx -->
        <control type="spincontrolex" id="9">
            <include>SettingsItemStyle</include>
            <width>850</width>
            <height>50</height>
            <aligny>center</aligny>
        </control>

        <!-- Default SliderEx -->
        <control type="sliderex" id="13">
            <include>SettingsItemStyle</include>
            <include>SettingsSliderStyle</include>
            <width>850</width>
            <height>50</height>
            <aligny>center</aligny>
            <sliderwidth>300</sliderwidth>
            <sliderheight>15</sliderheight>
        </control>

        <!-- Category Button -->
        <control type="button" id="15">
            <include>SettingsCategoryStyle</include>
            <width>330</width>
            <height>50</height>
        </control>

        <!-- Separator -->
        <control type="image" id="11">
            <include>SettingsSeparatorStyle</include>
            <width>850</width>
        </control>

        <!-- Label -->
        <control type="label" id="14">
            <include>SettingsLabelStyle</include>
            <width>850</width>
            <height>35</height>
            <font>font12</font>
            <textoffsetx>15</textoffsetx>
        </control>

        <!-- Edit Control -->
        <control type="edit" id="12">
            <include>SettingsItemStyle</include>
            <width>850</width>
            <height>50</height>
        </control>
    </controls>
</window>
