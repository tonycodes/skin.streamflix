<?xml version="1.0" encoding="UTF-8"?>
<window id="10040" type="window">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <views>50</views>
    <controls>
        <!-- Dark Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF141414">white.png</texture>
        </control>

        <!-- Header -->
        <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>120</height>

            <!-- Header Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>120</height>
                <texture colordiffuse="FF1a1a1a">white.png</texture>
            </control>

            <!-- Title -->
            <control type="label">
                <posx>80</posx>
                <posy>30</posy>
                <width>600</width>
                <height>50</height>
                <font>font_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$LOCALIZE[24001]</label>
            </control>

            <!-- Path -->
            <control type="label">
                <posx>80</posx>
                <posy>80</posy>
                <width>1200</width>
                <height>30</height>
                <font>font12</font>
                <textcolor>80FFFFFF</textcolor>
                <label>$INFO[Container.FolderPath]</label>
            </control>

            <!-- Back Button -->
            <control type="button" id="9000">
                <include>ButtonClose</include>
                <posx>1700</posx>
                <posy>35</posy>
                <width>140</width>
                <label>Back</label>
                <onclick>Action(Back)</onclick>
                <ondown>50</ondown>
            </control>
        </control>

        <!-- Addon List -->
        <control type="list" id="50">
            <posx>80</posx>
            <posy>140</posy>
            <width>1760</width>
            <height>900</height>
            <scrolltime>200</scrolltime>
            <onup>9000</onup>

            <itemlayout width="1760" height="80">
                <control type="group">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1760</width>
                    <height>75</height>

                    <!-- Row Background -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1760</width>
                        <height>75</height>
                        <texture colordiffuse="20FFFFFF">white.png</texture>
                    </control>

                    <!-- Icon -->
                    <control type="image">
                        <posx>15</posx>
                        <posy>7</posy>
                        <width>60</width>
                        <height>60</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>

                    <!-- Label -->
                    <control type="label">
                        <posx>95</posx>
                        <posy>12</posy>
                        <width>1600</width>
                        <height>30</height>
                        <font>font14</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>

                    <!-- Label2 (Description) -->
                    <control type="label">
                        <posx>95</posx>
                        <posy>42</posy>
                        <width>1600</width>
                        <height>25</height>
                        <font>font12</font>
                        <textcolor>80FFFFFF</textcolor>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </control>
            </itemlayout>

            <focusedlayout width="1760" height="80">
                <control type="group">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1760</width>
                    <height>75</height>

                    <!-- Focused Row Background (Red) -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1760</width>
                        <height>75</height>
                        <texture colordiffuse="FFE50914">white.png</texture>
                    </control>

                    <!-- Icon -->
                    <control type="image">
                        <posx>15</posx>
                        <posy>7</posy>
                        <width>60</width>
                        <height>60</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>

                    <!-- Label (White on Red) -->
                    <control type="label">
                        <posx>95</posx>
                        <posy>12</posy>
                        <width>1600</width>
                        <height>30</height>
                        <font>font14</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>

                    <!-- Label2 (Light on Red) -->
                    <control type="label">
                        <posx>95</posx>
                        <posy>42</posy>
                        <width>1600</width>
                        <height>25</height>
                        <font>font12</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>
