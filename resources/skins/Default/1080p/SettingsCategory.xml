<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>3</defaultcontrol>
    <controls>
        <!-- Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF141414">white.png</texture>
        </control>

        <!-- Header -->
        <control type="label">
            <posx>80</posx>
            <posy>40</posy>
            <width>800</width>
            <height>50</height>
            <font>font_title</font>
            <textcolor>FFFFFFFF</textcolor>
            <label>$INFO[System.CurrentWindow]</label>
        </control>

        <!-- Categories List (Left Side) -->
        <control type="grouplist" id="3">
            <posx>80</posx>
            <posy>120</posy>
            <width>350</width>
            <height>900</height>
            <orientation>vertical</orientation>
            <itemgap>5</itemgap>
            <onright>5</onright>
        </control>

        <!-- Settings List (Right Side) -->
        <control type="grouplist" id="5">
            <posx>480</posx>
            <posy>120</posy>
            <width>1360</width>
            <height>900</height>
            <orientation>vertical</orientation>
            <itemgap>5</itemgap>
            <pagecontrol>60</pagecontrol>
            <onleft>3</onleft>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="60">
            <include>SettingsScrollbarStyle</include>
            <posx>1860</posx>
            <posy>120</posy>
            <width>8</width>
            <height>900</height>
            <onleft>5</onleft>
        </control>

        <!-- Back Button -->
        <control type="button" id="2">
            <include>ButtonSecondary</include>
            <posx>1750</posx>
            <posy>40</posy>
            <width>100</width>
            <label>Back</label>
            <onclick>Action(Back)</onclick>
        </control>

        <!-- Default Button -->
        <control type="button" id="7">
            <include>SettingsItemStyle</include>
            <width>1340</width>
            <height>55</height>
        </control>

        <!-- Default RadioButton -->
        <control type="radiobutton" id="8">
            <include>SettingsItemStyle</include>
            <include>SettingsRadioStyle</include>
            <width>1340</width>
            <height>55</height>
            <radiowidth>30</radiowidth>
            <radioheight>30</radioheight>
            <radioposx>1280</radioposx>
        </control>

        <!-- Default SpinControlEx -->
        <control type="spincontrolex" id="9">
            <include>SettingsItemStyle</include>
            <width>1340</width>
            <height>55</height>
            <aligny>center</aligny>
        </control>

        <!-- Default SliderEx -->
        <control type="sliderex" id="13">
            <include>SettingsItemStyle</include>
            <include>SettingsSliderStyle</include>
            <width>1340</width>
            <height>55</height>
            <aligny>center</aligny>
            <sliderwidth>400</sliderwidth>
            <sliderheight>20</sliderheight>
        </control>

        <!-- Separator -->
        <control type="image" id="11">
            <include>SettingsSeparatorStyle</include>
            <width>1340</width>
        </control>

        <!-- Label -->
        <control type="label" id="14">
            <include>SettingsLabelStyle</include>
            <width>1340</width>
            <height>40</height>
            <textoffsetx>20</textoffsetx>
        </control>

        <!-- Category Button -->
        <control type="button" id="15">
            <include>SettingsCategoryStyle</include>
            <width>330</width>
            <height>55</height>
        </control>

        <!-- Edit Control -->
        <control type="edit" id="12">
            <include>SettingsItemStyle</include>
            <width>1340</width>
            <height>55</height>
        </control>
    </controls>
</window>
