<?xml version="1.0" encoding="UTF-8"?>
<window id="10004" type="window">
    <defaultcontrol always="true">9000</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <!-- Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF141414">white.png</texture>
        </control>

        <!-- Title -->
        <control type="label">
            <posx>80</posx>
            <posy>40</posy>
            <width>600</width>
            <height>50</height>
            <font>font_title</font>
            <textcolor>FFFFFFFF</textcolor>
            <label>Settings</label>
        </control>

        <!-- Settings Categories -->
        <control type="grouplist" id="9000">
            <posx>80</posx>
            <posy>120</posy>
            <width>400</width>
            <height>900</height>
            <orientation>vertical</orientation>
            <itemgap>10</itemgap>

            <!-- Media -->
            <control type="button" id="9012">
                <include>ButtonPrimary</include>
                <width>380</width>
                <height>60</height>
                <label>Media</label>
                <onclick>ActivateWindow(MediaSettings)</onclick>
            </control>

            <!-- Player -->
            <control type="button" id="9013">
                <include>ButtonPrimary</include>
                <width>380</width>
                <height>60</height>
                <label>Player</label>
                <onclick>ActivateWindow(PlayerSettings)</onclick>
            </control>

            <!-- Interface -->
            <control type="button" id="9011">
                <include>ButtonPrimary</include>
                <width>380</width>
                <height>60</height>
                <label>Interface</label>
                <onclick>ActivateWindow(InterfaceSettings)</onclick>
            </control>

            <!-- System -->
            <control type="button" id="9010">
                <include>ButtonPrimary</include>
                <width>380</width>
                <height>60</height>
                <label>System</label>
                <onclick>ActivateWindow(SystemSettings)</onclick>
            </control>

            <!-- Add-ons -->
            <control type="button" id="9014">
                <include>ButtonPrimary</include>
                <width>380</width>
                <height>60</height>
                <label>Add-ons</label>
                <onclick>ActivateWindow(AddonBrowser)</onclick>
            </control>

            <!-- File Manager -->
            <control type="button" id="9015">
                <include>ButtonPrimary</include>
                <width>380</width>
                <height>60</height>
                <label>File Manager</label>
                <onclick>ActivateWindow(FileManager)</onclick>
            </control>
        </control>

        <!-- Back Button -->
        <control type="button" id="2">
            <include>ButtonSecondary</include>
            <posx>1750</posx>
            <posy>40</posy>
            <width>100</width>
            <label>Back</label>
            <onclick>Action(Back)</onclick>
        </control>
    </controls>
</window>
