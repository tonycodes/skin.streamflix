<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="10146">
    <defaultcontrol always="true">6</defaultcontrol>
    <coordinates>
        <system>1</system>
    </coordinates>
    <controls>
        <!-- Dark overlay -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="DD000000">white.png</texture>
        </control>

        <!-- Dialog box -->
        <control type="group">
            <posx>360</posx>
            <posy>140</posy>
            <width>1200</width>
            <height>800</height>

            <!-- Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1200</width>
                <height>800</height>
                <texture colordiffuse="FF1A1A1A">white.png</texture>
            </control>

            <!-- Icon -->
            <control type="image">
                <posx>40</posx>
                <posy>40</posy>
                <width>200</width>
                <height>200</height>
                <texture>$INFO[ListItem.Icon]</texture>
                <aspectratio>keep</aspectratio>
            </control>

            <!-- Addon Name -->
            <control type="label">
                <posx>270</posx>
                <posy>40</posy>
                <width>890</width>
                <height>50</height>
                <font>font_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[ListItem.Label]</label>
            </control>

            <!-- Creator -->
            <control type="label">
                <posx>270</posx>
                <posy>100</posy>
                <width>890</width>
                <height>30</height>
                <font>font14</font>
                <textcolor>FFB3B3B3</textcolor>
                <label>$INFO[ListItem.Property(Addon.Creator)]</label>
            </control>

            <!-- Version -->
            <control type="label">
                <posx>270</posx>
                <posy>140</posy>
                <width>890</width>
                <height>30</height>
                <font>font13</font>
                <textcolor>FF808080</textcolor>
                <label>Version: $INFO[ListItem.Property(Addon.Version)]</label>
            </control>

            <!-- Description -->
            <control type="textbox" id="4">
                <posx>40</posx>
                <posy>270</posy>
                <width>1120</width>
                <height>380</height>
                <font>font13</font>
                <textcolor>FFB3B3B3</textcolor>
                <label>$INFO[ListItem.Property(Addon.Description)]</label>
            </control>

            <!-- Buttons -->
            <control type="grouplist" id="9">
                <posx>40</posx>
                <posy>700</posy>
                <width>1120</width>
                <height>60</height>
                <orientation>horizontal</orientation>
                <itemgap>20</itemgap>

                <!-- Install/Enable button -->
                <control type="button" id="6">
                    <width>180</width>
                    <height>50</height>
                    <font>font_button</font>
                    <label>$LOCALIZE[24069]</label>
                    <texturefocus colordiffuse="FFFFFFFF">button-rounded.png</texturefocus>
                    <texturenofocus colordiffuse="FFE50914">button-rounded.png</texturenofocus>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FF000000</focusedcolor>
                </control>

                <!-- Update button -->
                <control type="button" id="5">
                    <width>180</width>
                    <height>50</height>
                    <font>font_button</font>
                    <label>$LOCALIZE[24061]</label>
                    <texturefocus colordiffuse="FFFFFFFF">button-rounded.png</texturefocus>
                    <texturenofocus colordiffuse="FF46D369">button-rounded.png</texturenofocus>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FF000000</focusedcolor>
                    <visible>ListItem.Property(Addon.HasUpdate)</visible>
                </control>

                <!-- Disable button -->
                <control type="button" id="8">
                    <width>180</width>
                    <height>50</height>
                    <font>font_button</font>
                    <label>$LOCALIZE[24070]</label>
                    <texturefocus colordiffuse="FFFFFFFF">button-rounded.png</texturefocus>
                    <texturenofocus colordiffuse="FFE50914">button-rounded.png</texturenofocus>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FF000000</focusedcolor>
                </control>

                <!-- Close button -->
                <control type="button" id="7">
                    <width>180</width>
                    <height>50</height>
                    <font>font_button</font>
                    <label>$LOCALIZE[222]</label>
                    <onclick>Action(Close)</onclick>
                    <texturefocus colordiffuse="FFFFFFFF">button-rounded.png</texturefocus>
                    <texturenofocus colordiffuse="FF404040">button-rounded.png</texturenofocus>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FF000000</focusedcolor>
                </control>
            </control>
        </control>
    </controls>
</window>
