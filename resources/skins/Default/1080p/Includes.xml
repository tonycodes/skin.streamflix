        <width>180</width>
        <height>50</height>
        <font>font13</font>
        <align>center</align>
        <aligny>center</aligny>
        <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
        <texturenofocus colordiffuse="FF46D369">white.png</texturenofocus>
        <textcolor>FFFFFFFF</textcolor>
        <focusedcolor>FF141414</focusedcolor>
