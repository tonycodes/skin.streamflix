<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- Include Variables -->
    <include file="Variables.xml"/>

    <!-- ==================== BUTTON STYLE VARIANTS ==================== -->
    <!-- Use these includes to create colored buttons while keeping DRY -->
    <!-- Each variant is a complete button control with all required properties -->

    <!-- Red Button (Install, Delete, etc.) - white text on red bg -->
    <include name="ButtonRed">
        <width>180</width>
        <height>50</height>
        <font>font13</font>
        <align>center</align>
        <aligny>center</aligny>
        <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
        <texturenofocus colordiffuse="FFE50914">white.png</texturenofocus>
        <textcolor>FFFFFFFF</textcolor>
        <focusedcolor>FF141414</focusedcolor>
    </include>

    <!-- Green Button (Update, Success, etc.) - white text on green bg -->
