<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>ReplaceWindow($INFO[System.StartupWindow])</onload>
    <coordinates>
        <system>1</system>
    </coordinates>
    <controls>
        <!-- Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF141414">black.png</texture>
        </control>

        <!-- Logo Text -->
        <control type="label">
            <posx>0</posx>
            <posy>480</posy>
            <width>1920</width>
            <height>80</height>
            <font>font_hero</font>
            <textcolor>FFE50914</textcolor>
            <align>center</align>
            <label>StreamFlix</label>
            <animation effect="fade" start="0" end="100" time="500">WindowOpen</animation>
        </control>

        <!-- Loading Text -->
        <control type="label">
            <posx>960</posx>
            <posy>560</posy>
            <width>400</width>
            <height>40</height>
            <font>font14</font>
            <textcolor>FFB3B3B3</textcolor>
            <align>center</align>
            <label>Loading...</label>
        </control>
    </controls>
</window>
