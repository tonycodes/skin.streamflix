<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- Library Paths for Content Rows -->
    <variable name="RecentMoviesPath">
        <value>videodb://movies/titles/?xsp={"rules":{"and":[]},"order":{"direction":"descending","method":"dateadded"},"type":"movies"}</value>
    </variable>
    <variable name="RecentTVShowsPath">
        <value>videodb://tvshows/titles/?xsp={"rules":{"and":[]},"order":{"direction":"descending","method":"dateadded"},"type":"tvshows"}</value>
    </variable>
    <variable name="InProgressMoviesPath">
        <value>special://profile/playlists/video/inprogressmovies.xsp</value>
    </variable>
    <variable name="InProgressTVPath">
        <value>videodb://inprogressepisodes/</value>
    </variable>
    <variable name="RandomMoviesPath">
        <value>videodb://movies/titles/?xsp={"rules":{"and":[]},"order":{"direction":"ascending","method":"random"},"type":"movies"}</value>
    </variable>

    <!-- Item Title Display -->
    <variable name="ItemTitle">
        <value condition="!String.IsEmpty(ListItem.Title)">$INFO[ListItem.Title]</value>
        <value condition="!String.IsEmpty(ListItem.Label)">$INFO[ListItem.Label]</value>
        <value>Unknown</value>
    </variable>

    <!-- Item Year Display -->
    <variable name="ItemYear">
        <value condition="!String.IsEmpty(ListItem.Year)">$INFO[ListItem.Year]</value>
        <value></value>
    </variable>

    <!-- Item Rating Display -->
    <variable name="ItemRating">
        <value condition="!String.IsEmpty(ListItem.Rating)">$INFO[ListItem.Rating,, /10]</value>
        <value></value>
    </variable>

    <!-- Item Duration Display -->
    <variable name="ItemDuration">
        <value condition="!String.IsEmpty(ListItem.Duration)">$INFO[ListItem.Duration]</value>
        <value></value>
    </variable>

    <!-- Item Plot Display -->
    <variable name="ItemPlot">
        <value condition="!String.IsEmpty(ListItem.Plot)">$INFO[ListItem.Plot]</value>
        <value condition="!String.IsEmpty(ListItem.PlotOutline)">$INFO[ListItem.PlotOutline]</value>
        <value></value>
    </variable>

    <!-- Item Genre Display -->
    <variable name="ItemGenre">
        <value condition="!String.IsEmpty(ListItem.Genre)">$INFO[ListItem.Genre]</value>
        <value></value>
    </variable>

    <!-- Media Type Icon -->
    <variable name="MediaTypeIcon">
        <value condition="String.IsEqual(ListItem.DBType,movie)">icons/movie.png</value>
        <value condition="String.IsEqual(ListItem.DBType,tvshow)">icons/tv.png</value>
        <value condition="String.IsEqual(ListItem.DBType,episode)">icons/episode.png</value>
        <value>icons/video.png</value>
    </variable>

    <!-- Progress Percentage -->
    <variable name="ProgressPercentage">
        <value condition="!String.IsEmpty(ListItem.PercentPlayed)">$INFO[ListItem.PercentPlayed]</value>
        <value>0</value>
    </variable>

    <!-- Background Fanart -->
    <variable name="BackgroundFanart">
        <value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
        <value condition="!String.IsEmpty(ListItem.Property(Fanart_Image))">$INFO[ListItem.Property(Fanart_Image)]</value>
        <value>backgrounds/default.jpg</value>
    </variable>

    <!-- Poster Art -->
    <variable name="PosterArt">
        <value condition="!String.IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
        <value condition="!String.IsEmpty(ListItem.Art(thumb))">$INFO[ListItem.Art(thumb)]</value>
        <value condition="!String.IsEmpty(ListItem.Thumb)">$INFO[ListItem.Thumb]</value>
        <value>default_poster.png</value>
    </variable>

    <!-- Landscape/Thumb Art -->
    <variable name="ThumbArt">
        <value condition="!String.IsEmpty(ListItem.Art(landscape))">$INFO[ListItem.Art(landscape)]</value>
        <value condition="!String.IsEmpty(ListItem.Art(thumb))">$INFO[ListItem.Art(thumb)]</value>
        <value condition="!String.IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
        <value>default_thumb.png</value>
    </variable>

    <!-- Clear Logo Art -->
    <variable name="ClearLogoArt">
        <value condition="!String.IsEmpty(ListItem.Art(clearlogo))">$INFO[ListItem.Art(clearlogo)]</value>
        <value></value>
    </variable>

    <!-- Rating Match Percentage (Netflix style) -->
    <variable name="MatchPercentage">
        <value condition="Integer.IsGreaterOrEqual(ListItem.Rating,8)">98% Match</value>
        <value condition="Integer.IsGreaterOrEqual(ListItem.Rating,7)">95% Match</value>
        <value condition="Integer.IsGreaterOrEqual(ListItem.Rating,6)">87% Match</value>
        <value condition="Integer.IsGreaterOrEqual(ListItem.Rating,5)">75% Match</value>
        <value condition="Integer.IsGreaterOrEqual(ListItem.Rating,4)">65% Match</value>
        <value>55% Match</value>
    </variable>

    <!-- Maturity Rating -->
    <variable name="MaturityRating">
        <value condition="!String.IsEmpty(ListItem.Mpaa)">$INFO[ListItem.Mpaa]</value>
        <value>NR</value>
    </variable>
</includes>
