<?xml version="1.0" encoding="UTF-8"?>
<!-- Seek Bar Dialog - Shows when seeking during playback -->
<window type="dialog" id="10115">
    <defaultcontrol always="true">1</defaultcontrol>
    <coordinates>
        <system>1</system>
    </coordinates>
    <animation effect="slide" start="0,200" end="0,0" time="200">WindowOpen</animation>
    <animation effect="slide" start="0,0" end="0,200" time="200">WindowClose</animation>

    <controls>
        <!-- Bottom Overlay -->
        <control type="group">
            <posx>0</posx>
            <posy>880</posy>
            <width>1920</width>
            <height>200</height>

            <!-- Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>200</height>
                <texture colordiffuse="E0000000">white.png</texture>
            </control>

            <!-- Seek Slider -->
            <control type="slider" id="1">
                <posx>80</posx>
                <posy>25</posy>
                <width>1760</width>
                <height>25</height>
                <texturesliderbar colordiffuse="40FFFFFF">white.png</texturesliderbar>
                <textureslidernib colordiffuse="FFFFFFFF">white.png</textureslidernib>
                <textureslidernibfocus colordiffuse="FFE50914">white.png</textureslidernibfocus>
                <action>seek</action>
            </control>

            <!-- Time Info -->
            <control type="group">
                <posx>80</posx>
                <posy>60</posy>
                <width>1760</width>
                <height>40</height>

                <!-- Current Time -->
                <control type="label">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>200</width>
                    <height>35</height>
                    <font>font14</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>$INFO[Player.Time]</label>
                </control>

                <!-- Seek Time (when seeking) -->
                <control type="label">
                    <posx>780</posx>
                    <posy>0</posy>
                    <width>200</width>
                    <height>35</height>
                    <font>font14</font>
                    <textcolor>FFE50914</textcolor>
                    <align>center</align>
                    <label>$INFO[Player.SeekTime]</label>
                </control>

                <!-- Duration -->
                <control type="label">
                    <posx>1560</posx>
                    <posy>0</posy>
                    <width>200</width>
                    <height>35</height>
                    <font>font14</font>
                    <textcolor>80FFFFFF</textcolor>
                    <align>right</align>
                    <label>$INFO[Player.Duration]</label>
                </control>
            </control>

            <!-- Now Playing Info -->
            <control type="group">
                <posx>80</posx>
                <posy>110</posy>
                <width>1000</width>
                <height>70</height>

                <!-- Title -->
                <control type="label">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>40</height>
                    <font>font_title</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>$INFO[Player.Title]</label>
                </control>

                <!-- Season/Episode for TV -->
                <control type="label">
                    <posx>0</posx>
                    <posy>45</posy>
                    <width>500</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>80FFFFFF</textcolor>
                    <label>$INFO[VideoPlayer.Season,Season , ]$INFO[VideoPlayer.Episode, Episode ,]</label>
                    <visible>!String.IsEmpty(VideoPlayer.Season)</visible>
                </control>
            </control>

            <!-- Playback Status -->
            <control type="label">
                <posx>1560</posx>
                <posy>130</posy>
                <width>280</width>
                <height>40</height>
                <font>font14</font>
                <textcolor>80FFFFFF</textcolor>
                <align>right</align>
                <label>$INFO[Player.Paused,Paused,Playing]</label>
            </control>
        </control>
    </controls>
</window>
