<?xml version="1.0" encoding="UTF-8"?>
<window id="10025" type="window">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <views>50,51,52</views>

    <controls>
        <!-- Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="background_main">black.png</texture>
        </control>

        <!-- Dynamic Fanart Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[Container(50).ListItem.Art(fanart)]</texture>
            <aspectratio aligny="top">scale</aspectratio>
            <animation effect="fade" start="0" end="100" time="400">VisibleChange</animation>
        </control>

        <!-- Dark Overlay -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="CC141414">black.png</texture>
        </control>

        <!-- Top Bar -->
        <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>100</height>

            <!-- Top Gradient -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>120</height>
                <texture colordiffuse="CC000000">gradient-top.png</texture>
            </control>

            <!-- Logo -->
            <control type="label">
                <posx>80</posx>
                <posy>25</posy>
                <width>200</width>
                <height>50</height>
                <font>font_title</font>
                <textcolor>FFE50914</textcolor>
                <label>StreamFlix</label>
            </control>

            <!-- Page Title -->
            <control type="label">
                <posx>250</posx>
                <posy>30</posy>
                <width>400</width>
                <height>40</height>
                <font>font_title</font>
                <textcolor>text_white</textcolor>
                <label>$INFO[Container.FolderName]</label>
            </control>

            <!-- Add Source Button -->
            <control type="button" id="9990">
                <posx>1300</posx>
                <posy>25</posy>
                <width>180</width>
                <height>50</height>
                <font>font13</font>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>FF000000</textcolor>
                <focusedcolor>FFE50914</focusedcolor>
                <label>+ Add Source</label>
                <onclick>ActivateWindow(Videos,sources://video/)</onclick>
                <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
                <texturenofocus colordiffuse="FFFFFFFF">white.png</texturenofocus>
                <onright>9991</onright>
                <ondown>50</ondown>
            </control>

            <!-- Back Button -->
            <control type="button" id="9991">
                <posx>1500</posx>
                <posy>25</posy>
                <width>100</width>
                <height>50</height>
                <font>font13</font>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <label>Back</label>
                <onclick>Action(Back)</onclick>
                <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
                <texturenofocus colordiffuse="60FFFFFF">white.png</texturenofocus>
                <onleft>9990</onleft>
                <ondown>50</ondown>
            </control>
        </control>

        <!-- Main Content Area -->
        <control type="group">
            <posx>0</posx>
            <posy>120</posy>
            <width>1920</width>
            <height>960</height>

            <!-- Grid View (Poster Style) -->
            <control type="panel" id="50">
                <posx>80</posx>
                <posy>20</posy>
                <width>1760</width>
                <height>920</height>
                <orientation>vertical</orientation>
                <scrolltime>300</scrolltime>
                <onup>2</onup>
                <itemlayout width="195" height="340">
                    <control type="group">
                        <posx>5</posx>
                        <posy>10</posy>
                        <width>185</width>
                        <height>320</height>

                        <!-- Card Background -->
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>185</width>
                            <height>278</height>
                            <texture colordiffuse="FF333333">white.png</texture>
                        </control>

                        <!-- Poster/Icon -->
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>185</width>
                            <height>278</height>
                            <texture>$INFO[ListItem.Icon]</texture>
                            <aspectratio>keep</aspectratio>
                            <visible>String.IsEmpty(ListItem.Art(poster))</visible>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>185</width>
                            <height>278</height>
                            <texture>$INFO[ListItem.Art(poster)]</texture>
                            <aspectratio>scale</aspectratio>
                            <visible>!String.IsEmpty(ListItem.Art(poster))</visible>
                        </control>

                        <!-- Title -->
                        <control type="label">
                            <posx>0</posx>
                            <posy>285</posy>
                            <width>185</width>
                            <height>35</height>
                            <font>font12</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <align>center</align>
                        </control>

                        <!-- Progress Bar -->
                        <control type="group">
                            <posx>0</posx>
                            <posy>273</posy>
                            <width>185</width>
                            <height>5</height>
                            <visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>185</width>
                                <height>5</height>
                                <texture colordiffuse="progress_bg">white.png</texture>
                            </control>
                            <control type="progress">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>185</width>
                                <height>5</height>
                                <info>ListItem.PercentPlayed</info>
                            </control>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="220" height="340">
                    <control type="group">
                        <posx>-7</posx>
                        <posy>-5</posy>
                        <width>215</width>
                        <height>340</height>
                        <animation effect="fade" start="80" end="100" time="200">Focus</animation>

                        <!-- White Border -->
                        <control type="image">
                            <posx>-3</posx>
                            <posy>-3</posy>
                            <width>221</width>
                            <height>310</height>
                            <texture colordiffuse="FFFFFFFF">white.png</texture>
                        </control>

                        <!-- Card Background -->
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>215</width>
                            <height>298</height>
                            <texture colordiffuse="FF333333">white.png</texture>
                        </control>

                        <!-- Poster/Icon -->
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>215</width>
                            <height>298</height>
                            <texture>$INFO[ListItem.Icon]</texture>
                            <aspectratio>keep</aspectratio>
                            <visible>String.IsEmpty(ListItem.Art(poster))</visible>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>215</width>
                            <height>298</height>
                            <texture>$INFO[ListItem.Art(poster)]</texture>
                            <aspectratio>scale</aspectratio>
                            <visible>!String.IsEmpty(ListItem.Art(poster))</visible>
                        </control>

                        <!-- Title -->
                        <control type="label">
                            <posx>0</posx>
                            <posy>305</posy>
                            <width>215</width>
                            <height>35</height>
                            <font>font12_bold</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <align>center</align>
                        </control>

                        <!-- Progress Bar -->
                        <control type="group">
                            <posx>0</posx>
                            <posy>293</posy>
                            <width>215</width>
                            <height>6</height>
                            <visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>215</width>
                                <height>6</height>
                                <texture colordiffuse="progress_bg">white.png</texture>
                            </control>
                            <control type="progress">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>215</width>
                                <height>6</height>
                                <info>ListItem.PercentPlayed</info>
                            </control>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>

        <!-- Empty Library Message -->
        <control type="group">
            <posx>0</posx>
            <posy>400</posy>
            <visible>Container.NumItems(50) &lt; 2</visible>
            <control type="label">
                <posx>960</posx>
                <posy>0</posy>
                <width>800</width>
                <height>50</height>
                <font>font_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
                <label>No content found</label>
            </control>
            <control type="label">
                <posx>960</posx>
                <posy>60</posy>
                <width>800</width>
                <height>40</height>
                <font>font14</font>
                <textcolor>80FFFFFF</textcolor>
                <align>center</align>
                <label>Go to Settings â†’ Media to add your video folders</label>
            </control>
            <control type="button" id="8888">
                <posx>710</posx>
                <posy>130</posy>
                <width>250</width>
                <height>50</height>
                <font>font14</font>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <label>Add Videos</label>
                <onclick>ActivateWindow(Videos,sources://video/)</onclick>
                <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
                <texturenofocus colordiffuse="FFE50914">white.png</texturenofocus>
            </control>
            <control type="button" id="8889">
                <posx>980</posx>
                <posy>130</posy>
                <width>250</width>
                <height>50</height>
                <font>font14</font>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <label>Scan Library</label>
                <onclick>UpdateLibrary(video)</onclick>
                <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
                <texturenofocus colordiffuse="40FFFFFF">white.png</texturenofocus>
            </control>
        </control>

        <!-- Bottom Info Bar -->
        <control type="group">
            <posx>0</posx>
            <posy>980</posy>
            <width>1920</width>
            <height>100</height>

            <!-- Item Count -->
            <control type="label">
                <posx>80</posx>
                <posy>20</posy>
                <width>300</width>
                <height>30</height>
                <font>font12</font>
                <textcolor>text_dim</textcolor>
                <label>$INFO[Container.NumItems] items</label>
            </control>

            <!-- Current Position -->
            <control type="label">
                <posx>1540</posx>
                <posy>20</posy>
                <width>300</width>
                <height>30</height>
                <font>font12</font>
                <textcolor>text_dim</textcolor>
                <align>right</align>
                <label>$INFO[Container.CurrentItem] / $INFO[Container.NumItems]</label>
            </control>
        </control>
    </controls>
</window>
