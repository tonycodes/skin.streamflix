<?xml version="1.0" encoding="UTF-8"?>
<window id="10025" type="window">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <views>50</views>

    <controls>
        <!-- Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF141414">white.png</texture>
        </control>

        <!-- Dynamic Fanart Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[Container(50).ListItem.Art(fanart)]</texture>
            <aspectratio aligny="top">scale</aspectratio>
        </control>

        <!-- Dark Gradient Overlay -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="E0141414">white.png</texture>
        </control>

        <!-- ============================================== -->
        <!-- HEADER BAR -->
        <!-- ============================================== -->
        <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>80</height>

            <!-- Logo -->
            <control type="label">
                <posx>60</posx>
                <posy>20</posy>
                <width>200</width>
                <height>40</height>
                <font>font_title</font>
                <textcolor>FFE50914</textcolor>
                <label>STREAMFLIX</label>
            </control>

            <!-- Current Location -->
            <control type="label">
                <posx>280</posx>
                <posy>25</posy>
                <width>800</width>
                <height>35</height>
                <font>font13</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[Container(50).FolderName]</label>
            </control>

            <!-- Back Button -->
            <control type="button" id="9991">
                <posx>1700</posx>
                <posy>15</posy>
                <width>150</width>
                <height>50</height>
                <font>font13</font>
                <align>center</align>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <label>Back</label>
                <onclick>Action(Back)</onclick>
                <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
                <texturenofocus colordiffuse="40FFFFFF">white.png</texturenofocus>
                <ondown>50</ondown>
            </control>
        </control>

        <!-- ============================================== -->
        <!-- SHOW INFO PANEL (for Seasons/Episodes view) -->
        <!-- ============================================== -->
        <control type="group">
            <posx>60</posx>
            <posy>100</posy>
            <width>1800</width>
            <height>280</height>
            <visible>Container.Content(seasons) | Container.Content(episodes)</visible>

            <!-- Show Poster Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>150</width>
                <height>225</height>
                <texture colordiffuse="FF333333">white.png</texture>
            </control>

            <!-- Show Poster -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>150</width>
                <height>225</height>
                <texture fallback="white.png">$INFO[Container(50).Art(tvshow.poster)]</texture>
                <aspectratio>scale</aspectratio>
            </control>

            <!-- Show Title -->
            <control type="label">
                <posx>180</posx>
                <posy>10</posy>
                <width>1000</width>
                <height>50</height>
                <font>font_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[Container(50).FolderName]</label>
            </control>

            <!-- Show Metadata -->
            <control type="label">
                <posx>180</posx>
                <posy>65</posy>
                <width>800</width>
                <height>30</height>
                <font>font12</font>
                <textcolor>80FFFFFF</textcolor>
                <label>$INFO[Container(50).NumItems] items</label>
            </control>

            <!-- Section Label -->
            <control type="label">
                <posx>180</posx>
                <posy>110</posy>
                <width>400</width>
                <height>35</height>
                <font>font14</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>Seasons</label>
                <visible>Container.Content(seasons)</visible>
            </control>
            <control type="label">
                <posx>180</posx>
                <posy>110</posy>
                <width>400</width>
                <height>35</height>
                <font>font14</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>Episodes</label>
                <visible>Container.Content(episodes)</visible>
            </control>
        </control>

        <!-- ============================================== -->
        <!-- MAIN CONTENT LIST -->
        <!-- ============================================== -->
        <control type="panel" id="50">
            <posx>60</posx>
            <posy>100</posy>
            <width>1800</width>
            <height>920</height>
            <orientation>vertical</orientation>
            <scrolltime>300</scrolltime>
            <onup>9991</onup>

            <itemlayout width="195" height="340">
                <control type="group">
                    <posx>5</posx>
                    <posy>10</posy>
                    <width>185</width>
                    <height>320</height>

                    <!-- Card Background -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>185</width>
                        <height>278</height>
                        <texture colordiffuse="FF333333">white.png</texture>
                    </control>

                    <!-- Poster -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>185</width>
                        <height>278</height>
                        <texture>$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>

                    <!-- Fallback to Thumb for episodes -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>185</width>
                        <height>278</height>
                        <texture>$INFO[ListItem.Art(thumb)]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>String.IsEmpty(ListItem.Art(poster))</visible>
                    </control>

                    <!-- Fallback to Icon -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>185</width>
                        <height>278</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <visible>String.IsEmpty(ListItem.Art(poster)) + String.IsEmpty(ListItem.Art(thumb))</visible>
                    </control>

                    <!-- Title -->
                    <control type="label">
                        <posx>0</posx>
                        <posy>285</posy>
                        <width>185</width>
                        <height>35</height>
                        <font>font12</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <align>center</align>
                    </control>

                    <!-- Progress Bar -->
                    <control type="group">
                        <posx>0</posx>
                        <posy>273</posy>
                        <width>185</width>
                        <height>5</height>
                        <visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>185</width>
                            <height>5</height>
                            <texture colordiffuse="60FFFFFF">white.png</texture>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>185</width>
                            <height>5</height>
                            <texture colordiffuse="FFE50914">white.png</texture>
                            <visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
                        </control>
                    </control>
                </control>
            </itemlayout>
            <focusedlayout width="220" height="340">
                <control type="group">
                    <posx>-7</posx>
                    <posy>-5</posy>
                    <width>215</width>
                    <height>340</height>

                    <!-- White Border -->
                    <control type="image">
                        <posx>-4</posx>
                        <posy>-4</posy>
                        <width>223</width>
                        <height>310</height>
                        <texture colordiffuse="FFFFFFFF">white.png</texture>
                    </control>

                    <!-- Card Background -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>215</width>
                        <height>298</height>
                        <texture colordiffuse="FF333333">white.png</texture>
                    </control>

                    <!-- Poster -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>215</width>
                        <height>298</height>
                        <texture>$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>

                    <!-- Fallback to Thumb -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>215</width>
                        <height>298</height>
                        <texture>$INFO[ListItem.Art(thumb)]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>String.IsEmpty(ListItem.Art(poster))</visible>
                    </control>

                    <!-- Fallback to Icon -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>215</width>
                        <height>298</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>keep</aspectratio>
                        <visible>String.IsEmpty(ListItem.Art(poster)) + String.IsEmpty(ListItem.Art(thumb))</visible>
                    </control>

                    <!-- Title -->
                    <control type="label">
                        <posx>0</posx>
                        <posy>305</posy>
                        <width>215</width>
                        <height>35</height>
                        <font>font12</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <align>center</align>
                    </control>

                    <!-- Progress Bar -->
                    <control type="group">
                        <posx>0</posx>
                        <posy>293</posy>
                        <width>215</width>
                        <height>6</height>
                        <visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>215</width>
                            <height>6</height>
                            <texture colordiffuse="60FFFFFF">white.png</texture>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>215</width>
                            <height>6</height>
                            <texture colordiffuse="FFE50914">white.png</texture>
                            <visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>
                        </control>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- ============================================== -->
        <!-- SELECTED ITEM INFO (Bottom Panel) -->
        <!-- ============================================== -->
        <control type="group">
            <posx>60</posx>
            <posy>920</posy>
            <width>1800</width>
            <height>140</height>

            <!-- Info Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1800</width>
                <height>140</height>
                <texture colordiffuse="80000000">white.png</texture>
            </control>

            <!-- Selected Item Title -->
            <control type="label">
                <posx>20</posx>
                <posy>15</posy>
                <width>1000</width>
                <height>40</height>
                <font>font14</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[Container(50).ListItem.Label]</label>
            </control>

            <!-- Year/Rating Row -->
            <control type="label">
                <posx>20</posx>
                <posy>55</posy>
                <width>800</width>
                <height>25</height>
                <font>font12</font>
                <textcolor>80FFFFFF</textcolor>
                <label>$INFO[Container(50).ListItem.Year]  $INFO[Container(50).ListItem.Rating,Rating: ]  $INFO[Container(50).ListItem.Duration]</label>
            </control>

            <!-- Plot -->
            <control type="textbox">
                <posx>20</posx>
                <posy>85</posy>
                <width>1760</width>
                <height>50</height>
                <font>font12</font>
                <textcolor>AAFFFFFF</textcolor>
                <label>$INFO[Container(50).ListItem.Plot]</label>
            </control>

            <!-- Item Count -->
            <control type="label">
                <posx>1500</posx>
                <posy>15</posy>
                <width>280</width>
                <height>30</height>
                <font>font12</font>
                <textcolor>60FFFFFF</textcolor>
                <align>right</align>
                <label>$INFO[Container(50).CurrentItem] / $INFO[Container(50).NumItems]</label>
            </control>
        </control>

        <!-- ============================================== -->
        <!-- EMPTY LIBRARY MESSAGE -->
        <!-- ============================================== -->
        <control type="group">
            <posx>0</posx>
            <posy>400</posy>
            <visible>Integer.IsEqual(Container(50).NumItems,0)</visible>
            <control type="label">
                <posx>960</posx>
                <posy>0</posy>
                <width>800</width>
                <height>50</height>
                <font>font_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
                <label>No content found</label>
            </control>
            <control type="label">
                <posx>960</posx>
                <posy>60</posy>
                <width>800</width>
                <height>40</height>
                <font>font14</font>
                <textcolor>80FFFFFF</textcolor>
                <align>center</align>
                <label>Add your video sources to get started</label>
            </control>
            <control type="button" id="8888">
                <posx>760</posx>
                <posy>130</posy>
                <width>200</width>
                <height>50</height>
                <font>font14</font>
                <align>center</align>
                <textcolor>FF000000</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <label>Add Videos</label>
                <onclick>ActivateWindow(Videos,sources://video/)</onclick>
                <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
                <texturenofocus colordiffuse="FFE50914">white.png</texturenofocus>
                <onright>8889</onright>
            </control>
            <control type="button" id="8889">
                <posx>980</posx>
                <posy>130</posy>
                <width>200</width>
                <height>50</height>
                <font>font14</font>
                <align>center</align>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <label>Scan Library</label>
                <onclick>UpdateLibrary(video)</onclick>
                <texturefocus colordiffuse="FFFFFFFF">white.png</texturefocus>
                <texturenofocus colordiffuse="40FFFFFF">white.png</texturenofocus>
                <onleft>8888</onleft>
            </control>
        </control>
    </controls>
</window>
