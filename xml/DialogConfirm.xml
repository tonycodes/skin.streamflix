<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="10100">
    <defaultcontrol always="true">11</defaultcontrol>
    <coordinates>
        <system>1</system>
    </coordinates>
    <animation effect="fade" start="0" end="100" time="150">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>

    <controls>
        <!-- Dimmed Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="DD000000">black.png</texture>
        </control>

        <!-- Dialog Box -->
        <control type="group">
            <posx>610</posx>
            <posy>390</posy>
            <width>700</width>
            <height>300</height>
            <animation effect="zoom" start="90" end="100" time="150">WindowOpen</animation>

            <!-- Background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>700</width>
                <height>300</height>
                <texture colordiffuse="background_card">dialog-bg.png</texture>
            </control>

            <!-- Heading -->
            <control type="label" id="1">
                <posx>50</posx>
                <posy>40</posy>
                <width>600</width>
                <height>40</height>
                <font>font_title</font>
                <textcolor>text_white</textcolor>
                <align>center</align>
                <label>$INFO[Window.Property(Heading)]</label>
            </control>

            <!-- Message Lines -->
            <control type="label" id="2">
                <posx>50</posx>
                <posy>100</posy>
                <width>600</width>
                <height>30</height>
                <font>font14</font>
                <textcolor>text_gray</textcolor>
                <align>center</align>
                <label>$INFO[Window.Property(Line1)]</label>
            </control>
            <control type="label" id="3">
                <posx>50</posx>
                <posy>130</posy>
                <width>600</width>
                <height>30</height>
                <font>font14</font>
                <textcolor>text_gray</textcolor>
                <align>center</align>
                <label>$INFO[Window.Property(Line2)]</label>
            </control>

            <!-- Buttons -->
            <control type="grouplist" id="10">
                <posx>150</posx>
                <posy>200</posy>
                <width>400</width>
                <height>60</height>
                <orientation>horizontal</orientation>
                <itemgap>30</itemgap>
                <align>center</align>

                <!-- Cancel Button -->
                <control type="button" id="10">
                    <width>170</width>
                    <height>50</height>
                    <font>font_button</font>
                    <label>Cancel</label>
                    <onclick>Action(Close)</onclick>
                    <texturefocus colordiffuse="60808080">button-rounded.png</texturefocus>
                    <texturenofocus colordiffuse="60808080">button-rounded.png</texturenofocus>
                </control>

                <!-- OK Button -->
                <control type="button" id="11">
                    <width>170</width>
                    <height>50</height>
                    <font>font_button</font>
                    <label>OK</label>
                    <onclick>Action(Select)</onclick>
                    <texturefocus colordiffuse="button_primary">button-rounded.png</texturefocus>
                    <texturenofocus colordiffuse="button_primary">button-rounded.png</texturenofocus>
                    <textcolor>button_primary_text</textcolor>
                    <focusedcolor>button_primary_text</focusedcolor>
                </control>
            </control>
        </control>
    </controls>
</window>
