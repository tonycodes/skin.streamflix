<?xml version="1.0" encoding="UTF-8"?>
<window id="10000" type="window">
    <defaultcontrol always="true">9000</defaultcontrol>
    <allowoverlay>no</allowoverlay>

    <controls>
        <!-- Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF141414">common/white.png</texture>
        </control>

        <!-- Fanart Background (from focused item) -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[Container(9000).ListItem.Art(fanart)]</texture>
            <aspectratio aligny="top">scale</aspectratio>
            <visible>!String.IsEmpty(Container(9000).ListItem.Art(fanart))</visible>
        </control>

        <!-- Dark Overlay -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="CC141414">common/white.png</texture>
        </control>

        <!-- Bottom Gradient -->
        <control type="image">
            <posx>0</posx>
            <posy>400</posy>
            <width>1920</width>
            <height>680</height>
            <texture>common/gradient-bottom.png</texture>
        </control>

        <!-- ==================== TOP BAR ==================== -->
        <control type="group">
            <posx>60</posx>
            <posy>30</posy>

            <!-- Logo -->
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>300</width>
                <height>40</height>
                <font>font_title</font>
                <textcolor>FFE50914</textcolor>
                <label>StreamFlix</label>
            </control>

            <!-- Menu Items -->
            <control type="grouplist" id="100">
                <posx>220</posx>
                <posy>5</posy>
                <width>1400</width>
                <height>40</height>
                <orientation>horizontal</orientation>
                <itemgap>40</itemgap>
                <ondown>9000</ondown>

                <control type="button" id="101">
                    <width>80</width>
                    <height>35</height>
                    <font>font14_bold</font>
                    <align>center</align>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>Home</label>
                    <onclick>ActivateWindow(Home)</onclick>
                </control>

                <control type="button" id="102">
                    <width>100</width>
                    <height>35</height>
                    <font>font14</font>
                    <align>center</align>
                    <textcolor>FFB3B3B3</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>Movies</label>
                    <onclick>ActivateWindow(Videos,videodb://movies/titles/,return)</onclick>
                </control>

                <control type="button" id="103">
                    <width>120</width>
                    <height>35</height>
                    <font>font14</font>
                    <align>center</align>
                    <textcolor>FFB3B3B3</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>TV Shows</label>
                    <onclick>ActivateWindow(Videos,videodb://tvshows/titles/,return)</onclick>
                </control>

                <control type="button" id="104">
                    <width>100</width>
                    <height>35</height>
                    <font>font14</font>
                    <align>center</align>
                    <textcolor>FFB3B3B3</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>Settings</label>
                    <onclick>ActivateWindow(Settings)</onclick>
                </control>
            </control>
        </control>

        <!-- ==================== HERO SECTION ==================== -->
        <control type="group">
            <posx>80</posx>
            <posy>200</posy>
            <width>800</width>
            <height>400</height>

            <!-- Title -->
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>700</width>
                <height>80</height>
                <font>font_hero</font>
                <textcolor>FFFFFFFF</textcolor>
                <shadowcolor>FF000000</shadowcolor>
                <label>$INFO[Container(9000).ListItem.Label]</label>
                <visible>!String.IsEmpty(Container(9000).ListItem.Label)</visible>
            </control>

            <!-- Welcome Message (when no content) -->
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>700</width>
                <height>80</height>
                <font>font_hero</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>Welcome to StreamFlix</label>
                <visible>String.IsEmpty(Container(9000).ListItem.Label)</visible>
            </control>

            <!-- Plot -->
            <control type="textbox">
                <posx>0</posx>
                <posy>100</posy>
                <width>700</width>
                <height>120</height>
                <font>font_plot</font>
                <textcolor>FFB3B3B3</textcolor>
                <label>$INFO[Container(9000).ListItem.Plot]</label>
                <visible>!String.IsEmpty(Container(9000).ListItem.Plot)</visible>
            </control>

            <!-- Instructions (when no content) -->
            <control type="label">
                <posx>0</posx>
                <posy>100</posy>
                <width>700</width>
                <height>40</height>
                <font>font_plot</font>
                <textcolor>FFB3B3B3</textcolor>
                <label>Add movies and TV shows to your library to get started</label>
                <visible>String.IsEmpty(Container(9000).ListItem.Label)</visible>
            </control>

            <!-- Play Button -->
            <control type="button" id="200">
                <posx>0</posx>
                <posy>250</posy>
                <width>180</width>
                <height>50</height>
                <font>font_button</font>
                <align>center</align>
                <textcolor>FF000000</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <texturefocus colordiffuse="FFFFFFFF">common/button-fo.png</texturefocus>
                <texturenofocus colordiffuse="FFFFFFFF">common/button-nofo.png</texturenofocus>
                <label>Play</label>
                <onclick>PlayMedia($INFO[Container(9000).ListItem.FileNameAndPath])</onclick>
                <onup>100</onup>
                <ondown>9000</ondown>
                <visible>!String.IsEmpty(Container(9000).ListItem.FileNameAndPath)</visible>
            </control>
        </control>

        <!-- ==================== CONTENT ROWS ==================== -->
        <control type="grouplist" id="9999">
            <posx>0</posx>
            <posy>620</posy>
            <width>1920</width>
            <height>440</height>
            <orientation>vertical</orientation>
            <itemgap>20</itemgap>
            <onup>100</onup>

            <!-- Recently Added Movies -->
            <control type="group">
                <width>1920</width>
                <height>200</height>
                <visible>Library.HasContent(Movies)</visible>

                <control type="label">
                    <posx>80</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>35</height>
                    <font>font_row_header</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>Recently Added Movies</label>
                </control>

                <control type="list" id="9000">
                    <posx>80</posx>
                    <posy>45</posy>
                    <width>1760</width>
                    <height>155</height>
                    <orientation>horizontal</orientation>
                    <scrolltime>300</scrolltime>
                    <onup>100</onup>
                    <ondown>9001</ondown>
                    <onleft>9000</onleft>
                    <onright>9000</onright>
                    <content sortby="dateadded" sortorder="descending" limit="15">videodb://movies/titles/</content>
                    <itemlayout width="110" height="155">
                        <control type="image">
                            <posx>5</posx>
                            <posy>0</posy>
                            <width>100</width>
                            <height>150</height>
                            <texture fallback="media/default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                    </itemlayout>
                    <focusedlayout width="110" height="155">
                        <control type="image">
                            <posx>0</posx>
                            <posy>-5</posy>
                            <width>110</width>
                            <height>160</height>
                            <texture border="3" colordiffuse="FFFFFFFF">common/white.png</texture>
                        </control>
                        <control type="image">
                            <posx>5</posx>
                            <posy>0</posy>
                            <width>100</width>
                            <height>150</height>
                            <texture fallback="media/default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <!-- Recently Added TV Shows -->
            <control type="group">
                <width>1920</width>
                <height>200</height>
                <visible>Library.HasContent(TVShows)</visible>

                <control type="label">
                    <posx>80</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>35</height>
                    <font>font_row_header</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>Recently Added TV Shows</label>
                </control>

                <control type="list" id="9001">
                    <posx>80</posx>
                    <posy>45</posy>
                    <width>1760</width>
                    <height>155</height>
                    <orientation>horizontal</orientation>
                    <scrolltime>300</scrolltime>
                    <onup>9000</onup>
                    <ondown>9001</ondown>
                    <onleft>9001</onleft>
                    <onright>9001</onright>
                    <content sortby="dateadded" sortorder="descending" limit="15">videodb://tvshows/titles/</content>
                    <itemlayout width="110" height="155">
                        <control type="image">
                            <posx>5</posx>
                            <posy>0</posy>
                            <width>100</width>
                            <height>150</height>
                            <texture fallback="media/default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                    </itemlayout>
                    <focusedlayout width="110" height="155">
                        <control type="image">
                            <posx>0</posx>
                            <posy>-5</posy>
                            <width>110</width>
                            <height>160</height>
                            <texture border="3" colordiffuse="FFFFFFFF">common/white.png</texture>
                        </control>
                        <control type="image">
                            <posx>5</posx>
                            <posy>0</posy>
                            <width>100</width>
                            <height>150</height>
                            <texture fallback="media/default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <!-- No Library Content Message -->
            <control type="group">
                <width>1920</width>
                <height>200</height>
                <visible>!Library.HasContent(Movies) + !Library.HasContent(TVShows)</visible>

                <control type="label">
                    <posx>80</posx>
                    <posy>60</posy>
                    <width>1760</width>
                    <height>40</height>
                    <font>font16</font>
                    <textcolor>FFB3B3B3</textcolor>
                    <align>center</align>
                    <label>Your library is empty. Add media sources in Settings to get started.</label>
                </control>

                <control type="button" id="9000">
                    <posx>810</posx>
                    <posy>120</posy>
                    <width>300</width>
                    <height>50</height>
                    <font>font_button</font>
                    <align>center</align>
                    <textcolor>FF000000</textcolor>
                    <focusedcolor>FF000000</focusedcolor>
                    <texturefocus colordiffuse="FFFFFFFF">common/button-fo.png</texturefocus>
                    <texturenofocus colordiffuse="FFB3B3B3">common/button-nofo.png</texturenofocus>
                    <label>Add Media Sources</label>
                    <onclick>ActivateWindow(Settings)</onclick>
                    <onup>100</onup>
                </control>
            </control>
        </control>

        <!-- ==================== CLOCK ==================== -->
        <control type="label">
            <posx>1700</posx>
            <posy>35</posy>
            <width>180</width>
            <height>30</height>
            <font>font14</font>
            <textcolor>FFFFFFFF</textcolor>
            <align>right</align>
            <label>$INFO[System.Time]</label>
        </control>
    </controls>
</window>
