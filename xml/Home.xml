<?xml version="1.0" encoding="UTF-8"?>
<window id="10000" type="window">
    <defaultcontrol always="true">100</defaultcontrol>
    <allowoverlay>no</allowoverlay>

    <controls>
        <!-- Dark Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF141414">white.png</texture>
        </control>

        <!-- Fanart Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
            <aspectratio aligny="top">scale</aspectratio>
            <visible>!String.IsEmpty(ListItem.Art(fanart))</visible>
        </control>

        <!-- Dark Overlay -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="DD141414">white.png</texture>
        </control>

        <!-- ==================== TOP BAR ==================== -->
        <control type="group">
            <posx>60</posx>
            <posy>30</posy>

            <!-- Logo -->
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>300</width>
                <height>45</height>
                <font>font_title</font>
                <textcolor>FFE50914</textcolor>
                <label>StreamFlix</label>
            </control>

            <!-- Main Menu -->
            <control type="grouplist" id="100">
                <posx>220</posx>
                <posy>5</posy>
                <width>1400</width>
                <height>45</height>
                <orientation>horizontal</orientation>
                <itemgap>40</itemgap>
                <ondown>9000</ondown>

                <control type="button" id="101">
                    <width>80</width>
                    <height>40</height>
                    <font>font14_bold</font>
                    <align>center</align>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>Home</label>
                    <onclick>ActivateWindow(Home)</onclick>
                </control>

                <control type="button" id="102">
                    <width>100</width>
                    <height>40</height>
                    <font>font14</font>
                    <align>center</align>
                    <textcolor>FFB3B3B3</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>Movies</label>
                    <onclick>ActivateWindow(Videos,videodb://movies/titles/,return)</onclick>
                </control>

                <control type="button" id="103">
                    <width>120</width>
                    <height>40</height>
                    <font>font14</font>
                    <align>center</align>
                    <textcolor>FFB3B3B3</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>TV Shows</label>
                    <onclick>ActivateWindow(Videos,videodb://tvshows/titles/,return)</onclick>
                </control>

                <control type="button" id="104">
                    <width>100</width>
                    <height>40</height>
                    <font>font14</font>
                    <align>center</align>
                    <textcolor>FFB3B3B3</textcolor>
                    <focusedcolor>FFFFFFFF</focusedcolor>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <label>Settings</label>
                    <onclick>ActivateWindow(Settings)</onclick>
                </control>
            </control>

            <!-- Clock -->
            <control type="label">
                <posx>1640</posx>
                <posy>5</posy>
                <width>180</width>
                <height>35</height>
                <font>font14</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>right</align>
                <label>$INFO[System.Time]</label>
            </control>
        </control>

        <!-- ==================== HERO CONTENT INFO ==================== -->
        <control type="group">
            <posx>80</posx>
            <posy>200</posy>

            <!-- Title -->
            <control type="fadelabel">
                <posx>0</posx>
                <posy>0</posy>
                <width>800</width>
                <height>80</height>
                <font>font_hero</font>
                <textcolor>FFFFFFFF</textcolor>
                <shadowcolor>FF000000</shadowcolor>
                <label>$INFO[Container(9000).ListItem.Label]</label>
            </control>

            <!-- Year / Rating -->
            <control type="label">
                <posx>0</posx>
                <posy>90</posy>
                <width>600</width>
                <height>30</height>
                <font>font14</font>
                <textcolor>FF46D369</textcolor>
                <label>$INFO[Container(9000).ListItem.Year]   $INFO[Container(9000).ListItem.Rating]</label>
            </control>

            <!-- Plot -->
            <control type="textbox">
                <posx>0</posx>
                <posy>130</posy>
                <width>700</width>
                <height>100</height>
                <font>font_plot</font>
                <textcolor>FFB3B3B3</textcolor>
                <label>$INFO[Container(9000).ListItem.Plot]</label>
            </control>
        </control>

        <!-- ==================== MOVIES ROW ==================== -->
        <control type="group">
            <posx>0</posx>
            <posy>620</posy>

            <control type="label">
                <posx>80</posx>
                <posy>0</posy>
                <width>600</width>
                <height>35</height>
                <font>font_row_header</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>Movies</label>
            </control>

            <control type="list" id="9000">
                <posx>80</posx>
                <posy>45</posy>
                <width>1760</width>
                <height>170</height>
                <orientation>horizontal</orientation>
                <scrolltime>300</scrolltime>
                <pagecontrol>-</pagecontrol>
                <onup>100</onup>
                <ondown>9001</ondown>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onclick>Info</onclick>
                <content sortby="title" sortorder="ascending">videodb://movies/titles/</content>
                <itemlayout width="120" height="170">
                    <control type="image">
                        <posx>5</posx>
                        <posy>5</posy>
                        <width>110</width>
                        <height>160</height>
                        <texture fallback="default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout width="130" height="180">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>130</width>
                        <height>180</height>
                        <texture colordiffuse="FFFFFFFF">white.png</texture>
                        <bordertexture border="4">-</bordertexture>
                    </control>
                    <control type="image">
                        <posx>5</posx>
                        <posy>5</posy>
                        <width>120</width>
                        <height>170</height>
                        <texture fallback="default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                </focusedlayout>
            </control>
        </control>

        <!-- ==================== TV SHOWS ROW ==================== -->
        <control type="group">
            <posx>0</posx>
            <posy>850</posy>

            <control type="label">
                <posx>80</posx>
                <posy>0</posy>
                <width>600</width>
                <height>35</height>
                <font>font_row_header</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>TV Shows</label>
            </control>

            <control type="list" id="9001">
                <posx>80</posx>
                <posy>45</posy>
                <width>1760</width>
                <height>170</height>
                <orientation>horizontal</orientation>
                <scrolltime>300</scrolltime>
                <pagecontrol>-</pagecontrol>
                <onup>9000</onup>
                <ondown>9001</ondown>
                <onleft>9001</onleft>
                <onright>9001</onright>
                <onclick>ActivateWindow(Videos,$INFO[ListItem.FolderPath],return)</onclick>
                <content sortby="title" sortorder="ascending">videodb://tvshows/titles/</content>
                <itemlayout width="120" height="170">
                    <control type="image">
                        <posx>5</posx>
                        <posy>5</posy>
                        <width>110</width>
                        <height>160</height>
                        <texture fallback="default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout width="130" height="180">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>130</width>
                        <height>180</height>
                        <texture colordiffuse="FFFFFFFF">white.png</texture>
                    </control>
                    <control type="image">
                        <posx>5</posx>
                        <posy>5</posy>
                        <width>120</width>
                        <height>170</height>
                        <texture fallback="default_poster.png">$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
